<h1>Your Orders</h1>

<table>
    <th>Id</th>
    <th>Placed On</th>
    <th>Updated On</th>
    <th>Current Status</th>
    <th>Total Items</th>
    <th>Grand Total</th>
  <% @orders.each do |order| %>

    <tr id="order-<%= order.id %>">
      <td><%= link_to "Order ##{order.id}", "/orders/#{order.id}" %></td>
      <td><%= order.created_at %></td>
      <td><%= order.updated_at %></td>
      <td><%= order.status %></td>
      <td><%= order.items.length %></td>
      <td>$<%= order.grandtotal %></td>
    </tr>

  <% end %>
</table>
